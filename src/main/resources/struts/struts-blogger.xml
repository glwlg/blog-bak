<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="com.glw.blog.pojo.Blogger" namespace="/blogger" extends="struts-default">
		<action name="blogger_*" method="{1}" class="bloggerAction">
			<result name="login">/index.jsp</result>
			<result name="loginfailed">/blogger/login.jsp</result>
			<result name="loginOut">/index.jsp</result>
			<result name="reg">/blogger/login.jsp</result>
		</action>
	</package>
</struts>